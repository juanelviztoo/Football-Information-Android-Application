<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheWonderfulWorldOfFootball" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryVariant">@color/darkerBlue</item>
        <item name="colorOnPrimary">@color/lightWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hotBlue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background for profile fragment -->
        <item name="profileBackground">@drawable/football_bg6</item>
    </style>

    <!-- Image Border Color -->
    <style name="BorderColor">
        <item name="civ_border_color">?attr/colorSecondary</item>
    </style>

    <!-- Image Background Profile -->
    <style name="ProfileBackground">
        <item name="background">@drawable/football_bg6</item>
    </style>

